<p><b>{{editField.label}}:</b></p>

{{#if (eq editField.type 'select')}}
  {{#power-select
    options=editField.options
    onchange=(action (mut editField.value))
    selected=editField.value
    as |option|
  }}
    {{option}}
  {{/power-select}}

{{else if (or (eq editField.type 'number') (eq editField.type 'text'))}}
  <input>

{{else if (eq editField.type 'pickADate')}}
  {{pick-a-date date=(readonly editField.date) on-selected=(action (mut editField.date)) placeholder="Pick a date" options=(readonly editField.extraPickadateOptions)}}

{{else if (eq editField.type 'constant')}}
  {{editField.value}}

{{else if (eq editField.type 'siteInputValue')}}
  {{siteInputValue}}
{{/if}}

{{yield}}
